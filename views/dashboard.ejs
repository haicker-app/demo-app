<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard - Vulnerable Notes App</title>
    <link rel="stylesheet" href="/static?file=style.css">
</head>
<body>
    <div class="container">
        <div class="nav">
            <a href="/">Home</a>
            <a href="/public-notes">Public Notes</a>
            <a href="/dashboard">Dashboard</a>
            <a href="/create-note">Create Note</a>
            <a href="/backup">Backup</a>
            <a href="/logout">Logout</a>
        </div>
        
        <h1>Dashboard</h1>
        <p>Welcome, <%= user %>!</p>
        
        <div style="margin-bottom: 20px;">
            <form method="GET" action="/dashboard" class="search-form">
                <input type="text" name="search" value="<%= search %>" placeholder="Search your notes...">
                <button type="submit" class="btn">Search</button>
                <% if (search) { %>
                    <a href="/dashboard" class="btn" style="background: #6c757d;">Clear</a>
                <% } %>
            </form>
        </div>
        
        <a href="/create-note" class="btn">Create New Note</a>
        
        <h2>Notes</h2>
        <% if (notes.length === 0) { %>
            <p>No notes found. <a href="/create-note">Create your first note!</a></p>
        <% } else { %>
            <% notes.forEach(function(note) { %>
                <div class="note-card">
                    <div class="note-title"><%= note.title %></div>
                    <div class="note-meta">
                        By: <%= note.author_id %> | 
                        <%= note.is_public ? 'Public' : 'Private' %> | 
                        Created: <%= new Date(note.created_at).toLocaleDateString() %>
                    </div>
                    <div class="note-content">
                        <%= note.content.substring(0, 100) %>...
                    </div>
                    <a href="/notes/<%= note.id %>" class="btn">View Note</a>
                </div>
            <% }); %>
        <% } %>
    </div>
</body>
</html> 